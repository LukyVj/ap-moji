         <h3>Ajax - XMLHttpRequest </h3>
         <section class="curl-commands">
        <pre><code>var getJSON = function(url) {
  return new Promise(function(resolve, reject) {
    var xhr = new XMLHttpRequest();
    xhr.open('get', url, true);
    xhr.responseType = 'json';
    xhr.onload = function() {
      var status = xhr.status;
      if (status == 200) {
        resolve(xhr.response);
      } else {
        reject(status);
      }
    };
    xhr.send();
  });
};

getJSON('<span class="tag">http://localhost:3000/api/1</span>').then(function(data) {
  console.log(data)
});</code></pre>
</section>

